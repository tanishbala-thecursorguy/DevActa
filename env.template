# ========================================
# DEVACTA ENVIRONMENT CONFIGURATION
# Copy this to .env.local in your project root
# ========================================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# Optional: Service Role Key (Backend Only - NEVER expose to client!)
# Only use in server-side code or for admin operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Configuration
VITE_APP_NAME=DevActa
VITE_APP_URL=http://localhost:3001

# Features Toggle
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_REALTIME=true
VITE_ENABLE_NOTIFICATIONS=true

# External Services (Optional)
VITE_GITHUB_OAUTH_CLIENT_ID=
VITE_GOOGLE_OAUTH_CLIENT_ID=
VITE_DISCORD_OAUTH_CLIENT_ID=

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_MIXPANEL_TOKEN=

# Error Tracking (Optional)
VITE_SENTRY_DSN=

